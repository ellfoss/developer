@import url('http//fonts.googleapis.com/css?family=Open+Sans400,300,700&subset=latin,cyrillic')

*
	cursor default

html
body
.error
	width 100%
	height 100%
	margin 0
	padding 0
	overflow hidden

body
	display table
	font-family 'Open Sans', sans-serif
	font-size 14px
	color #3c3c3c
	line-height 1
	background url(../img/bg.jpg) no-repeat center
	background-size cover
	background-attachment fixed

@keyframes bounceIn
	from, 20%, 40%, 60%, 80%, to
		animation-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);
	0%
		opacity: 0;
		transform: scale(.3, .3);
	20%
		transform: scale(1.1, 1.1);
	40%
		transform: scale(.9, .9);
	60%
		opacity: 1;
		transform: scale(1.03, 1.03);
	80%
		transform: scale(.97, .97);
	to
		opacity: 1;
		transform: scale(1, 1);


.error
	display table-cell
	vertical-align middle
	color #c2d4f7
	font-size 20px
	font-weight bold
	text-align center
	text-shadow 1px 1px 3px blue

.head
	font-size 32px
	color #d87373;

.anim
	display inline-block
	position relative
	animation-name bounceIn
	animation-duration 0.75s
	animation-fill-mode both
	color white
	font-size 200px
	font-weight 600
	line-height 220px
	letter-spacing 1px
	text-shadow 0 0 2px #686868, 0 1px 1px #ddd, 0 2px 1px #d6d6d6, 0 3px 1px #ccc, 0 4px 1px #c5c5c5, 0 5px 1px #c1c1c1, 0 6px 1px #bbb, 0 7px 1px #777, 0 8px 3px rgba(100, 100, 100, 0.4), 0 9px 5px rgba(100, 100, 100, 0.1), 0 10px 7px rgba(100, 100, 100, 0.15), 0 11px 9px rgba(100, 100, 100, 0.2), 0 12px 11px rgba(100, 100, 100, 0.25), 0 13px 15px rgba(100, 100, 100, 0.3)
	&:nth-child(2)
		animation-delay 0.2s
	&:nth-child(3)
		animation-delay 0.4s
	&:nth-child(4)
		animation-delay 0.6s

.text
	font-size 28px
	margin-bottom 40px

.message
.now
	display inline-block

.message .number
	display inline-block
	font-size 28px
	color #1515dc
	text-align center
	text-shadow 0 0 3px white
	transition all 0.1s

.now
	margin-left 10px
	font-size 22px
	color #95dc95
	text-decoration none
	cursor pointer
